extends layout

block content
    form(action="/signup" method="POST")
        label(for="username")= "Username*"
        input(type="text" required name="username" id="username" maxlength="20")
        label(for="password")= "Password*"
        input(type="password" required name="password" id="password")
        each picture in pictures
            input(type="radio", name="pictures" id=`${picture._id}`)
            label(for=`${picture._id}`)
                img(src=`${picture.link}`, alt="Profile picture")
        button(type="submit") Sign up