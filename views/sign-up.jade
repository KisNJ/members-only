extends layout

block content
    form(action="/signup" method="POST")
        label(for="username")= "Username*"
        input(type="text" required name="username" id="username" maxlength="20")
        label(for="password")= "Password*"
        input(type="password" required name="password" id="password")
        label(for="cpassword")= "Confirm Password*"
        input(type="password" required name="confirm_password" id="cpassword")
        div
            each picture,index in pictures
                if index===0
                    input(type="radio", name="pictures" value=`${picture._id}` checked )
                else
                    input(type="radio", name="pictures" value=`${picture._id}` )
                label(for=`${picture._id}`)
                    img(src=`${picture.link}`, alt="Profile picture")
        button(type="submit") Sign up