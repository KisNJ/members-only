extends layout

block content
    header
        div
            h1= title
            a(href="/") Homepage
    form(action="/login" method="POST")
        label(for="username")= "Username*"
        input(type="text" required name="username" id="username" maxlength="20")
        label(for="password")= "Password*"
        input(type="password" required name="password" id="password")
        button(type="submit" class="margin_top") Log in